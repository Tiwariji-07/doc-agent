# WaveMaker Docs Agent Configuration

# === AI Provider Selection ===
# Options: anthropic, openai, ollama
AI_PROVIDER=anthropic

# === Anthropic Configuration ===
ANTHROPIC_API_KEY=sk-ant-xxxx
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# === OpenAI Configuration ===
OPENAI_API_KEY=sk-xxxx
OPENAI_MODEL=gpt-4o

# === Ollama Configuration ===
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# === LLM Shared Configuration ===
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=2048

# === Redis Configuration ===
# Local: redis://localhost:6379/0
# Cloud: redis://username:password@host:port/0
REDIS_URL=redis://localhost:6379/0

# === Qdrant Configuration ===
QDRANT_URL=https://your-cluster.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=wavemaker_docs

# === WaveMaker Docs Configuration ===
DOCS_REPO_URL=https://github.com/wavemaker/docs.git
DOCS_BRANCH=release-12
DOCS_BASE_URL=https://docs.wavemaker.com/learn

# === Academy MCP Configuration (optional) ===
# Model Context Protocol server for WaveMaker Academy video recommendations
# Uses the wm-academy-semantic-search tool to find relevant tutorial videos
# Leave empty to disable video recommendations
# Dev: https://dev-academyservices.wavemaker.com/mcp
# Prod: https://academyservices.wavemaker.com/mcp
ACADEMY_MCP_URL=https://dev-academyservices.wavemaker.com/mcp

# === Model Configuration ===
# Embedding model (will be downloaded automatically)
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# === Reranker Configuration ===
# Provider: "jina" (recommended for Apple Silicon) or "local" (cross-encoder)
RERANKER_PROVIDER=jina
JINA_API_KEY=your_jina_api_key_here

# === Cache Configuration ===
CACHE_TTL_HOURS=1
SEMANTIC_CACHE_THRESHOLD=0.95

# === Server Configuration ===
HOST=0.0.0.0
PORT=8000
DEBUG=true

# === Analytics Configuration ===
ANALYTICS_ENABLED=true
ANALYTICS_DB_PATH=data/analytics.db
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=5
